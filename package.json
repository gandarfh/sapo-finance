{
  "name": "sapo-finance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0 --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -s ./public --no-dll",
    "generate:component": "plop --plopfile ./generators/components.plopfile.js",
    "generate:page": "plop --plopfile ./generators/pages.plopfile.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "next": "10.0.3",
    "next-i18next": "^7.0.1",
    "next-pwa": "^3.1.5",
    "nookies": "^2.5.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-i18next": "^11.7.3",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.8",
    "@babel/plugin-transform-react-display-name": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-actions": "^6.1.9",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.1.9",
    "@storybook/react": "^6.1.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.1",
    "babel-loader": "^8.2.1",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.1",
    "plop": "^2.7.4",
    "prettier": "^2.1.2",
    "react-docgen-typescript": "^1.20.5",
    "typescript": "^4.0.5"
